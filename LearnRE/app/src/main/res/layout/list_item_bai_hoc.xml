<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>
        <variable
            name="baiHocViewModel"
            type="com.example.asd.learnre.viewmodel.BaiHocViewModel"></variable>
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:onClick="@{baiHocViewModel.clickBaiHoc()}"
        android:layout_height="@dimen/card_height"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/item_vertical_margin"
        android:layout_marginBottom="@dimen/item_vertical_margin">

        <LinearLayout
            android:layout_margin="@dimen/item_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@{baiHocViewModel.chuDe}"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_chu_de"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
