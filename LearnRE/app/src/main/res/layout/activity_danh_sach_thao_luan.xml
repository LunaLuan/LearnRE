<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_thao_luan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.asd.learnre.view.activity.DanhSachThaoLuanActivity">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvThaoLuan"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:padding="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivMyAvatar"
                android:src="@drawable/img_avatar_test"
                android:scaleType="fitXY"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size" />
            <EditText
                android:id="@+id/edComment"
                android:ems="10"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnSend"
                android:text="Send"
                android:onClick="clickSend"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</layout>
